---
const skills = [
  {
    nombre: "JavaScript",
    icono: "/tools/javascript.svg",
  },
  {
    nombre: "TypeScript",
    icono: "/tools/typescript.svg",
  },
  {
    nombre: "Java",
    icono: "/tools/java.svg",
    size: "w-20 h-22",
  },
  {
    nombre: "GitHub",
    icono: "/tools/github.svg",
  },
  {
    nombre: "Git",
    icono: "/tools/git.svg",
  },
  {
    nombre: "Vercel",
    icono: "/tools/vercel.svg",
  },
  {
    nombre: "React",
    icono: "/tools/react.svg",
  },
  {
    nombre: "Tailwind",
    icono: "/tools/tailwind.svg",
    size: "size-24",
  },
  {
    nombre: "Mysql",
    icono: "/tools/mysql.svg",
  },
  {
    nombre: "MongoDB",
    icono: "/tools/mongodb.svg",
    size: "w-14 h-20 px-0 mx-0",
  },
  {
    nombre: "Node",
    icono: "/tools/node.svg",
  },
  {
    nombre: "Spring",
    icono: "/tools/spring.svg",
  },
  {
    nombre: "JWT",
    icono: "/tools/jwt.svg",
  },
];
---

<section class="lg:w-[740px] mx-auto sm:px-0 py-10 px-[28px]">
  <div
    class="inline-flex flex-nowrap overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)] w-[250px] mx-[calc((100%-250px)/2)] md:w-[750px] md:mx-[calc((100%-750px)/2)]"
  >
    <ul
      class="flex items-center justify-center md:justify-start [&_li]:mx-2 xl:[&_li]:mx-6 [&_img]:max-w-none animate-infinite-scroll"
    >
      {
        skills.map((skill) => (
          <li>
            <img
              src={skill.icono}
              alt={skill.nombre}
              class={skill.size ?? "size-20"}
            />
          </li>
        ))
      }
    </ul>
    <ul
      class="flex items-center justify-center md:justify-start [&_li]:mx-2 xl:[&_li]:mx-6 [&_img]:max-w-none animate-infinite-scroll"
    >
      {
        skills.map((skill) => (
          <li>
            <img
              src={skill.icono}
              alt={skill.nombre}
              class={skill.size ?? "size-20"}
            />
          </li>
        ))
      }
    </ul>
  </div>
</section>
